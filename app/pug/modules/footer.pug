		.footer__col
			.news-footer
				.news-footer__title Latest News
					-var news = [{number: '04', mounth: 'feb',comment: 26, text:'fsfdsgfdhgh.ghj,fff'}, {number: '28', mounth: 'jan',comment: 0, text:'fsfdsgfdhgh.ghj,fff'}, {number: '03', mounth: 'mar',comment: 2, text:'fsfdsgfdhgh.ghj,fff'}]
						each val in news
							.news-footer__news-block
								.news-footer__date-block
									.news-footer__number!= val.number
									.news-footer__month!= val.mounth
								.news-footer__content-news
									.news-footer__text-news!=val.text
									.news-footer__coments
										span!=val.comment
